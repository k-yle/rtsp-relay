{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "rtsp-relay": ["."],
      "rtsp-relay/*": ["./*"]
    },
    "lib": ["es2020", "dom"]
  },
  "include": ["test", "docs", "index.js", "types.d.ts"],
  "exclude": ["**/video/*"]
}
